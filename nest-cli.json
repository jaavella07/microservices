{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/products/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/products/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/products",
  "projects": {
    "client-gateway": {
      "type": "application",
      "root": "apps/client-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/client-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/client-gateway/tsconfig.app.json"
      }
    },
    "products": {
      "type": "application",
      "root": "apps/products",
      "entryFile": "main",
      "sourceRoot": "apps/products/src",
      "compilerOptions": {
        "tsConfigPath": "apps/products/tsconfig.app.json"
      } 
    },
    "orders": {
      "type": "application",
      "root": "apps/orders",
      "entryFile": "main",
      "sourceRoot": "apps/orders/src",
      "compilerOptions": {
        "tsConfigPath": "apps/orders/tsconfig.app.json"
      } 
    }
  }
}